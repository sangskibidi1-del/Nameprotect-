-- NameProtect Script
-- ƒê·∫∑t trong StarterPlayerScripts
-- T√°c gi·∫£: Quyendz ü•Ä
-- M·ª•c ƒë√≠ch: ·∫®n t√™n th·∫≠t c·ªßa ng∆∞·ªùi ch∆°i trong UI, chat, v√† nh√¢n v·∫≠t

local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local Chat = game:GetService("Chat")
local LocalPlayer = Players.LocalPlayer
local CorrectKey = "quyendzvailon" -- Key x√°c th·ª±c c·ªë ƒë·ªãnh

-- Bi·∫øn l∆∞u tr·ªØ
local nameMap = {} -- B·∫£ng √°nh x·∫° t√™n th·∫≠t -> t√™n gi·∫£
local counter = 1 -- B·ªô ƒë·∫øm cho t√™n gi·∫£
local prefix = "Protect" -- Ti·ªÅn t·ªë t√™n gi·∫£
local savedKeyFile = "SavedKey.txt" -- T√™n file l∆∞u key

-- ƒê·ªçc key ƒë√£ l∆∞u
local function loadSavedKey()
    local success, result = pcall(function()
        if isfile(savedKeyFile) then
            return readfile(savedKeyFile)
        end
    end)
    return success and result == CorrectKey and result or nil
end

-- H√†m t·∫°o t√™n gi·∫£ cho ng∆∞·ªùi ch∆°i
local function getFakeName(player)
    if not nameMap[player] then
        if player == LocalPlayer then
            nameMap[player] = "NameProtect"
        else
            nameMap[player] = prefix .. tostring(counter)
            counter = counter + 1
        end
    end
    return nameMap[player]
end

-- H√†m thay th·∫ø vƒÉn b·∫£n trong UI
local function replaceTextInUI(obj)
    if not (obj:IsA("TextLabel") or obj:IsA("TextButton") or obj:IsA("TextBox")) then
        return
    end
    if not obj.Text then
        return
    end
    local text = obj.Text
    for player, fakeName in pairs(nameMap) do
        -- Thay th·∫ø c·∫£ t√™n ng∆∞·ªùi ch∆°i v√† t√™n hi·ªÉn th·ªã, b·ªè qua case
        text = text:gsub(player.Name, fakeName):gsub(player.DisplayName, fakeName)
    end
    obj.Text = text
end

-- H√†m qu√©t v√† theo d√µi UI
local function scanAndMonitorUI(gui)
    if not gui then return end
    for _, obj in ipairs(gui:GetDescendants()) do
        pcall(replaceTextInUI, obj) -- D√πng pcall ƒë·ªÉ tr√°nh l·ªói
    end
    gui.DescendantAdded:Connect(function(obj)
        pcall(replaceTextInUI, obj)
    end)
end

-- H√†m c·∫≠p nh·∫≠t t√™n hi·ªÉn th·ªã tr√™n nh√¢n v·∫≠t
local function updateCharacterName(player)
    local fakeName = getFakeName(player)
    if not player.Character then return end
    local humanoid = player.Character:WaitForChild("Humanoid", 5) -- ƒê·ª£i t·ªëi ƒëa 5 gi√¢y
    if humanoid then
        pcall(function()
            humanoid.DisplayName = fakeName
            humanoid.Name = fakeName
        end)
    end
end

-- H√†m ch√≠nh c·ªßa NameProtect
local function startNameProtect()
    -- G√°n t√™n gi·∫£ cho LocalPlayer
    getFakeName(LocalPlayer)

    -- X·ª≠ l√Ω t·∫•t c·∫£ ng∆∞·ªùi ch∆°i hi·ªán t·∫°i
    for _, player in ipairs(Players:GetPlayers()) do
        getFakeName(player)
        updateCharacterName(player)
        -- Theo d√µi khi nh√¢n v·∫≠t t√°i sinh
        player.CharacterAdded:Connect(function(character)
            task.wait(0.1) -- ƒê·ª£i nh√¢n v·∫≠t t·∫£i
            updateCharacterName(player)
        end)
    end

    -- Theo d√µi ng∆∞·ªùi ch∆°i m·ªõi
    Players.PlayerAdded:Connect(function(player)
        getFakeName(player)
        player.CharacterAdded:Connect(function(character)
            task.wait(0.1) -- ƒê·ª£i nh√¢n v·∫≠t t·∫£i
            updateCharacterName(player)
        end)
        updateCharacterName(player)
    end)

    -- Qu√©t v√† theo d√µi CoreGui v√† PlayerGui
    pcall(function()
        scanAndMonitorUI(CoreGui)
        scanAndMonitorUI(LocalPlayer:WaitForChild("PlayerGui", 5))
    end)

    -- Theo d√µi GUI m·ªõi trong CoreGui
    CoreGui.ChildAdded:Connect(function(child)
        if child:IsA("ScreenGui") then
            pcall(scanAndMonitorUI, child)
        end
    end)

    -- X·ª≠ l√Ω chat ƒë·ªÉ thay th·∫ø t√™n
    pcall(function()
        Chat:RegisterChatCallback(Enum.ChatCallbackType.OnClientFormattingMessage, function(message)
            for player, fakeName in pairs(nameMap) do
                message.Message = message.Message:gsub(player.Name, fakeName):gsub(player.DisplayName, fakeName)
            end
            return message
        end)
    end)

    -- Hi·ªÉn th·ªã th√¥ng b√°o kh·ªüi ƒë·ªông
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false

    local label = Instance.new("TextLabel")
    label.Parent = screenGui
    label.Size = UDim2.new(1, 0, 0, 50)
    label.BackgroundTransparency = 1
    label.Text = "NameProtect by Quyendz ü•Ä"
    label.TextColor3 = Color3.fromRGB(0, 255, 127)
    label.TextScaled = true
    label.TextStrokeTransparency = 0.8
    label.Font = Enum.Font.SourceSansBold

    task.spawn(function()
        task.wait(5)
        screenGui:Destroy()
    end)
end

-- H√†m t·∫°o UI nh·∫≠p key
local function createKeyInputUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
    screenGui.ResetOnSpawn = false
    screenGui.IgnoreGuiInset = true

    local frame = Instance.new("Frame")
    frame.Parent = screenGui
    frame.Size = UDim2.new(0, 300, 0, 200)
    frame.Position = UDim2.new(0.5, -150, 0.5, -100)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = frame

    local textBox = Instance.new("TextBox")
    textBox.Parent = frame
    textBox.Size = UDim2.new(1, -20, 0, 40)
    textBox.Position = UDim2.new(0, 10, 0, 20)
    textBox.PlaceholderText = "Enter Key..."
    textBox.Text = ""
    textBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    textBox.TextColor3 = Color3.new(1, 1, 1)
    textBox.TextScaled = true
    textBox.ClearTextOnFocus = false
    textBox.BorderSizePixel = 0

    local textBoxCorner = Instance.new("UICorner")
    textBoxCorner.CornerRadius = UDim.new(0, 4)
    textBoxCorner.Parent = textBox

    local rememberButton = Instance.new("TextButton")
    rememberButton.Parent = frame
    rememberButton.Size = UDim2.new(0, 25, 0, 25)
    rememberButton.Position = UDim2.new(0, 10, 0, 70)
    rememberButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    rememberButton.Text = "‚úò"
    rememberButton.TextColor3 = Color3.new(1, 0, 0)
    rememberButton.TextScaled = true
    rememberButton.BorderSizePixel = 0

    local rememberChecked = false
    rememberButton.MouseButton1Click:Connect(function()
        rememberChecked = not rememberChecked
        rememberButton.Text = rememberChecked and "‚úî" or "‚úò"
        rememberButton.TextColor3 = rememberChecked and Color3.new(0, 1, 0) or Color3.new(1, 0, 0)
    end)

    local rememberLabel = Instance.new("TextLabel")
    rememberLabel.Parent = frame
    rememberLabel.Size = UDim2.new(1, -40, 0, 25)
    rememberLabel.Position = UDim2.new(0, 45, 0, 70)
    rememberLabel.Text = "Remember Key"
    rememberLabel.TextColor3 = Color3.new(1, 1, 1)
    rememberLabel.BackgroundTransparency = 1
    rememberLabel.TextScaled = true
    rememberLabel.TextXAlignment = Enum.TextXAlignment.Left

    local confirmButton = Instance.new("TextButton")
    confirmButton.Parent = frame
    confirmButton.Size = UDim2.new(1, -20, 0, 40)
    confirmButton.Position = UDim2.new(0, 10, 0, 120)
    confirmButton.Text = "Confirm"
    confirmButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    confirmButton.TextColor3 = Color3.new(1, 1, 1)
    confirmButton.TextScaled = true
    confirmButton.BorderSizePixel = 0

    local confirmButtonCorner = Instance.new("UICorner")
    confirmButtonCorner.CornerRadius = UDim.new(0, 4)
    confirmButtonCorner.Parent = confirmButton

    confirmButton.MouseButton1Click:Connect(function()
        if textBox.Text == CorrectKey then
            if rememberChecked then
                pcall(function()
                    writefile(savedKeyFile, textBox.Text)
                end)
            end
            screenGui:Destroy()
            startNameProtect()
        else
            textBox.Text = "‚ùå Wrong key!"
            task.wait(1)
            textBox.Text = ""
            textBox.PlaceholderText = "Enter Key..."
        end
    end)
end

-- Kh·ªüi ch·∫°y
local savedKey = loadSavedKey()
if savedKey == CorrectKey then
    startNameProtect()
else
    createKeyInputUI()
end
